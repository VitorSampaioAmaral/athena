generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String         @id @default(cuid())
  name                String?
  email               String         @unique
  password            String
  notificationsEnabled Boolean        @default(false)
  analyses            Analysis[]
  transcriptions      Transcription[]
  collections         Collection[]
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
}

model Analysis {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  imageUrl    String
  result      String    @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Transcription {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  imageUrl    String
  text        String   @db.Text
  confidence  Float    // nível de confiança da transcrição (0-1)
  status      String   // 'pending', 'processing', 'completed', 'error'
  error       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  collectionItems CollectionItem[]

  @@unique([userId, imageUrl, text])
}

model Collection {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?  @db.Text
  accessId    String   @unique // ID de 32 caracteres para acesso compartilhado
  items       CollectionItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CollectionItem {
  id             String       @id @default(cuid())
  collectionId   String
  collection     Collection   @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  transcriptionId String
  transcription  Transcription @relation(fields: [transcriptionId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())

  @@unique([collectionId, transcriptionId])
}
