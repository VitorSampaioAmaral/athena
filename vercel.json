{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": { 
        "nodeVersion": "18.x",
        "distDir": ".next"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.18.2",
      "PNPM_VERSION": "8.15.0",
      "ENABLE_PNPM": "true"
    }
  },
  "installCommand": "npm i -g pnpm@8.15.0 && pnpm install --force"
}