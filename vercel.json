{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": { 
        "nodeVersion": "18.x"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.18.2",
      "PNPM_VERSION": "8.15.0",
      "ENABLE_PNPM": "true",
      "DISABLE_PNPM_VERSION_CHECK": "true"
    }
  },
  "installCommand": "pnpm install --force --no-frozen-lockfile"
}