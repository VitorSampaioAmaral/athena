{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": { 
        "nodeVersion": "20.x",
        "distDir": ".next"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20.12.2",
      "PNPM_VERSION": "9.1.4",
      "ENABLE_PNPM": "true"
    }
  },
  "installCommand": "pnpm install --no-frozen-lockfile --force"
}